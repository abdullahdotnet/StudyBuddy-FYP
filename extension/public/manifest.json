{
    "manifest_version": 3,
    "name": "YouTube Screenshot & Note",
    "version": "1.0",
    "description": "Take screenshots and notes of YouTube videos",
    "permissions": ["activeTab", "scripting"],
    "action": {
      "default_popup": "index.html",
      "default_icon": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
      }
    },
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["*://*.youtube.com/*"],
        "js": ["content.js"]
      }
    ]
  }