{
    "manifest_version": 3,
    "name": "YouTube Video Screenshot",
    "version": "1.0",
    "description": "Take screenshots of YouTube videos at any specified time.",
    "permissions": [
      "activeTab",
      "scripting"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
      }
    },
    "host_permissions": [
      "https://www.youtube.com/*"
    ]
  }
  